	// 	weight: 700
	// 	style: italic
	// }
	// blackitalic: {
	// 	weight: 900
	// 	style: italic
	// }
}

/*
 * Code
 */
for $name, $font in $weights
	@font-face
		font-family: "Oclock"
		src: unquote('
			url("../fonts/' + $font-file-name + '-' + $name + '.woff2") format("woff2")
		')
		font-weight: $font.weight
		font-style: $font.style
