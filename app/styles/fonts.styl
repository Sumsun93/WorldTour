	light: {
		weight: 200
		style: normal
	}
	regular: {
		weight: 400
		style: normal
	}
	medium: {
		weight: 600
		style: normal
	}
	bold: {
		weight: 700
		style: normal
	}
	black: {
		weight: 900
		style: normal
	}
